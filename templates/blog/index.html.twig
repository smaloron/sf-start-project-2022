{% block title %}Mon Blog{% endblock %}

{% block body %}
    <div class="row">
        {% for article in articleList %}
            <div class="col-md-6">
                <h4>{{ article.title | capitalize}}</h4>
                <p>
                    publi√© le : {{ article.createdAt | date('d/m/Y')}}
                    par : {{ article.author.fullName }}
                </p>
                <p>{{ article.excerpt(20) }} ...
                    <a href="{{ path('blog_details', {'slug': article.slug }) }}">En savoir plus</a>
                </p>

            </div>
        {% endfor %}
    </div>
{% endblock %}
